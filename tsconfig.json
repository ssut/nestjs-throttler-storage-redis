{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
